{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testMatch": ["**/test/integration/**/*.spec.ts"],
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@sparcs-clubs/api/(.*)$": "<rootDir>/../src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "tsconfig.spec.json" }]
  }
}
