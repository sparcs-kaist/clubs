{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "dev": {
      "dependsOn": ["@clubs/interface#build", "@clubs/domain#build"],
      "cache": false
    },
    "api#dev": {
      "dependsOn": ["@clubs/interface#build", "@clubs/domain#build"],
      "persistent": true,
      "interruptible": true
    },
    "web#dev": {
      "dependsOn": ["@clubs/interface#build", "@clubs/domain#build"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {}
  }
}
